<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/pitch_trainer_settings_header">
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/pitch_settings_entries"
            android:entryValues="@array/pitch_settings_values"
            android:key="list_preference_1"
            android:summary="@string/pitch_trainer_settings_summary"
            android:title="@string/pitch_trainer_settings_header" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/generated_tones_header">
        <ListPreference
            android:defaultValue="true"
            android:entries="@array/tones_settings_values"
            android:entryValues="@array/tones_settings_values"
            android:key="list_preference_2"
            android:summary="@string/tone_settings_summary"
            android:title="Tone types" />
    </PreferenceCategory>

</PreferenceScreen>
